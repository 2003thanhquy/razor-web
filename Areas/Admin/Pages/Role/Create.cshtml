@page "/Admin/add-role/"
@model App.Admin.Role.CreateModel
@{
    ViewData["Title"] = "Day la danh sach cac role";
}
<h1>@ViewData["Title"]</h1>

<partial name="_StatusMessage" model="@Model.StatusMessage">
<hr>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Name" class="control-label"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group m-2">
                 <input type="submit" value="Tao moi" class="btn btn-primary">
                 <a class="btn btn-primary" asp-page="./index">Danh sach cac role</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}